    <div id="torn_paper_header" class="line">
      <div class="container_12">
        <div class="grid_12">
          <h1>
            Contact <em>SherlockDocs</em>
          </h1>
          
          <p>Any ideas, suggestions? Feel free to contact us through email, call or you can even visit us.</p>
        </div>
      </div>
      
      <div class="torn_paper"></div>
    </div>
    
    <div id="content" class="line">
      <div class="container_12">
        
        <div id="contact" class="line">
        
          <div class="grid_7">
            <h3>Message Us</h3>
            
            <%= render('shared/flash', :flash => flash) %>
          
            <%= form_for @contact_message do |f| %>
                        
            <%= f.error_messages :header_message => nil, :message => nil %>
            
              <div class="form_element line">
                <div class="unit">
                  <label>First Name</label>
                  
                  <%= f.text_field :first_name, 
                      :class => 'text text_small', :title => 'First Name' %> 
                    
                </div>
                <div class="lastUnit padding20l">
                  <label>Last Name</label>
                  <%= f.text_field :last_name,
                      :class => 'text text_small', :title => 'Last Name' %> 
                </div>
              </div>

              <div class="form_element line">
                <label> Email Addrees</label>
                <%= f.text_field :email, 
                    :class => 'text', :title => 'Email Address' %> 
              </div>

              <div class="form_element line">
                <label> Message</label>                
                <%= f.text_area :message, :class => 'auto-hint2 textarea', :title => 'Message' %>              
              </div>

              <div class="form_element line">
             
                <a class="button" id="contact-form-send" href="#">Contact Us</a>
                                     
              </div>
            
            <% end %>
            
            
          </div>
          
          <div class="grid_5">
            <div id="sidebar">
              <h4 class="home"><span class="icon"></span><span>Visit us at</span></h4>

              <p class="address">
                <em>SherlockDocs</em>
                Girdle Rd <br />
                East Aurora <br />
                NY 14052 <br />            
              </p>
  
              
              <h4 class="phone"><span class="icon"></span><span>Call us at</span></h4>
 
              <p>
                <span>Phone:</span> (866) 620-2716      
              </p>
 
              
              <h4 class="mail"><span class="icon"></span><span>Email us at</span></h4>
 
              <p>
                <a href="mailto:info@sherlockdocs.com">info@sherlockdocs.com</a>   
              </p>
              
            </div>
          </div>
          
        </div>
        
      </div>
    
    </div>
    
<script type="text/javascript">
  $(function() {
    $('#contact-form-send').click(function(e) {
      $('form#new_contact_message').submit();
      return false;
    });
  });
  
</script>
