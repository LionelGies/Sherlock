<% content_for :head do %>
    <link rel="stylesheet" type="text/css" href="/public/javascript/base/jquery.ui.all.css" />
    <link rel="stylesheet" type="text/css" href="/public/javascript/base/jquery.ui.dialog.css" />
    <script type="text/javascript" src="/public/javascript/jquery-1.9.0.js"></script>
    <script type="text/javascript" src="/public/javascript/jquery-ui-1.10.0.custom.min.js"></script>
    
    
    <script type="text/javascript">
      $(function() {
        $( ".dialog_box" ).dialog({
          autoOpen: false,
          show: "blind",
          hide: "explode",
          width: 600,
          height: 495,
          modal: true
        });
        

        $( ".get_started_button" ).click(function() {
          $( "#get_started" ).dialog( "open" );
            return false;
        });
        
        $( ".upload_cases_button" ).click(function() {
          $( "#upload_cases" ).dialog( "open" );
            return false;
        });
        
        $( ".video_image_button" ).click(function() {
          $( "#video_image" ).dialog( "open" );
            return false;
        });
        
        $( ".autotext_button" ).click(function() {
          $( "#autotext" ).dialog( "open" );
            return false;
        });
        
        $( ".manager_button" ).click(function() {
          $( "#manager" ).dialog( "open" );
            return false;
        });
        
        $( ".page_breaks_button" ).click(function() {
          $( "#page_breaks" ).dialog( "open" );
            return false;
          });
          
        });
    </script>
  
<% end %>




