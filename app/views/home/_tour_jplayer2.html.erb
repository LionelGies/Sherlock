
<div class="videobox">  
  <div id="jp_container_tour" class="jp-video" 
     style="width:539px;position:relative;margin-left:0px;margin-top:20px;">
  <div class="jp-type-single">
    <div class="jp-jplayer"></div>
    
    <div class="jp-gui">
      <div class="jp-video-play" style="height:320px;">
        <a href="javascript:;" class="jp-video-play-icon" 
           style="margin-top:0;position:absolute;top:119px;left:52%;outline:none;"
           tabindex="1">play</a>
      </div>
      
      <% if true %>
                <div class="jp-interface">

                        <div class="jp-progress">
                                <div class="jp-seek-bar" style="text-align:left;">
                                        <div class="jp-play-bar"></div>
                                </div>
                        </div>
                        <% if false %>
                          <div class="jp-current-time"></div>
                          <div class="jp-duration"></div>
                          <div class="jp-title">
                            <!--
                                  <ul>
                                    <li>
                                      SherlockDocs Tutorial
                                    </li>
                                  </ul>
                            -->
                          </div>                                                                        
                        
                          <div class="jp-controls-holder">
                                <ul class="jp-controls" 
                                    style="width:100px;margin-left:175px;border-right:1px solid black;">
                                        <li><a href="javascript:;" class="jp-play" tabindex="1">play</a></li>
                                        <li><a href="javascript:;" class="jp-pause" tabindex="1">pause</a></li>
                                        <% if false %>
                                        <li><a href="javascript:;" class="jp-stop" tabindex="1">stop</a></li>
                                        <% end %>
                                        <li><a href="javascript:;" class="jp-mute" tabindex="1" title="mute">mute</a></li>
                                        <li><a href="javascript:;" class="jp-unmute" tabindex="1" title="unmute">unmute</a></li>
                                        <li><a href="javascript:;" class="jp-volume-max" tabindex="1" title="max volume">max volume</a></li>
                                </ul>
                                <div class="jp-volume-bar">
                                        <div class="jp-volume-bar-value"></div>

                                </div>

                                <% if false %>
                                <ul class="jp-toggles">
                                        <li><a href="javascript:;" class="jp-full-screen" tabindex="1" title="full screen">full screen</a></li>
                                        <li><a href="javascript:;" class="jp-restore-screen" tabindex="1" title="restore screen">restore screen</a></li>
                                        <li><a href="javascript:;" class="jp-repeat" tabindex="1" title="repeat">repeat</a></li>
                                        <li><a href="javascript:;" class="jp-repeat-off" tabindex="1" title="repeat off">repeat off</a></li>

                                </ul>
                                <% end %>
                          </div>
                        
                        <% end %>
                        
                </div>
      <% end %>
    </div>
    <div class="jp-no-solution">
            <span>Update Required</span>
            To play the media you will need to either update your browser 
            to a recent version or update your 
            <a href="http://get.adobe.com/flashplayer/" target="_blank">Flash plugin</a>.
    </div>
  </div>
</div>
  
</div>

<script type="text/javascript" src="/javascript/jquery.jplayer.js"></script>

<script type="text/javascript">
$(function() {  
  var ancestor = '#jp_container_tour';  
  var player = $(".jp-jplayer", ancestor);
  player.jPlayer({
    cssSelectorAncestor: ancestor,
    ready: function () {
      $(this).jPlayer("setMedia", {              
              flv : 'https://s3.amazonaws.com/sherlockdocs-public/adtoons640x360.flv',
              m4v : 'https://s3.amazonaws.com/sherlockdocs-public/adtoons640x360.mp4',
              poster: '/images/video_sample.png'
      });
    },        
    size: {
      width: '539px',
      height: '320px'      
    },    
    swfPath: "/javascript/",
    supplied: 'flv, m4v'    
  });
      
  var isPlaying = false;
  
  $('.jp-video-play', ancestor).click(function() {
      isPlaying = !isPlaying;
      $('.jp-video-play', ancestor).hide();
  });
    
  $('#jp_container_tour').click(function() {      
      if (isPlaying) {
        player.jPlayer('pause');
        $('.jp-video-play', ancestor).show();
      } else {
        $('.jp-video-play', ancestor).hide();
        player.jPlayer('play');
      }
      isPlaying = !isPlaying;
  });
  
  <%= kissmetrics_track do %>  
    $(".jp-jplayer", ancestor).bind($.jPlayer.event.play, function(event) {      
      _kmq.push(['record', 'played tour video']);      
      $(".jp-jplayer", ancestor).unbind($.jPlayer.event.play);
    });
  <% end %>
  
});

</script>
