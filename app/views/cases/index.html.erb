<h1>My Cases</h1>

<% if @cases.empty? %>
<h2>You haven't created any cases yet</h2>
<% else %>
  <ol>
    <% @cases.each do |c| %>
    <li><%= link_to c.title, c %> [<%= link_to 'Edit', edit_case_path(c) %>]</li>
    <% end %>
  </ol>
<% end %>

<div>
  <%= link_to 'Create a new Case', new_case_path %>
</div>