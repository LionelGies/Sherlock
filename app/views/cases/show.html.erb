<h1>
  Case: <%= @case.title %>
  <small>
  [<%= link_to 'Delete', @case, 
               :confirm => 'Are you sure you want to remove this case?', 
               :method => :delete %>]
  </small>
</h1>

<%= link_to 'Back to Cases list', cases_path %> |
<%= link_to 'Download as PDF', case_path(@case, :format => :pdf) %>

<h2>Summary</h2>

<p>
  <%= @case.summary.to_s.html_safe %>
</p>

<div>
  <%= link_to 'Edit Title and Summary', edit_case_path(@case) %>
</div>

<h2>Blocks</h2>

<div class="blocks-area">
  <% if @case.blocks.empty? %>
    <h3>This case doesn't have any blocks yet</h3>
  <% else %>
    <%= render @case.blocks %>
  <% end %>
  <div class="new-block"></div>
</div>
  
<%= link_to 'Add text block (AJAX)', 
    new_case_html_detail_path(@case), :class => 'block-add-ajax' %><br/>
<%= link_to 'Add text block', new_case_html_detail_path(@case) %><br/>
<%= link_to 'Add picture block', new_case_picture_path(@case) %><br/>
<%= link_to 'Add video block', new_case_video_path(@case) %><br/>

<%= render 'shared/tinymce' %>
