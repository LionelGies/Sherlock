<div class="new-data-log-block new-block" style="display:none;">
    
  <div class="block block-wrapper data-log-block" data-block_type="data-log">   
    
    <div class="block-action-links">  
      <span class="links-for-editable" style="display:none;">      
        <a href="#" class="link-save" title="Click to save changes">Save</a> |          
        <a class="link-cancel" href="#">Cancel</a>
      </span>    
    </div>
    
    <div class="block-editable-wrapper">
      <div>
        <h4 style="margin-bottom:1em;">Data Log Block</h4>
        <div class="block-editable">
          <form>
            <div class="custom-form" data-block_type="data-log" style="margin-bottom:5px;">
              <div class="data-log-row">
                <label class="small-black" 
                       for="data-log-date-field">Date:</label>
                <div class="left">
                  <input type="text" 
                         id="data-log-date-field"
                         class="data-log-date-field"
                         name="day" size="10"/>
                  (MM/DD/YYYY)
                </div>
                <label class="small-black label-time">Time:</label>
                <div class="left">
                  <input type="text" name="hour" size="6"/>                          
                  (HH:MM am/pm)
                </div>
              </div>
              <div class="data-log-row">
                <label class="small-black">Location:</label>
                <div class="left">
                  <input type="text" name="location" size="20"/>
                </div>
              </div>
            </div>            
          </form>
          <div class="block-editable-html"></div>          
        
        </div>
      </div>
    </div>
    
  </div>
    
</div>

<script type="text/javascript">
    $(function() {    
      $('.data-log-date-field').datepicker({
      });
    });
</script>