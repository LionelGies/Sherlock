<div class="new-witness-statement-block new-block" style="display:none;">
    
  <div class="block block-wrapper witness-statement-block" 
       data-block_type="witness-statement">   
    
    <div class="block-action-links">  
      <span class="links-for-editable" style="display:none;">      
        <a href="#" class="link-save" title="Click to save changes">Save</a> |          
        <a class="link-cancel" href="#">Cancel</a>
      </span>    
    </div>
    
    <div class="block-editable-wrapper">
      <div>
        <h4 style="margin-bottom:1em;">Witness Statement</h4>
        <div class="block-editable">
          <form>
            <div class="custom-form" data-block_type="witness-statement">
              
              <div class="form-row">
                <label for="witness-statement-date-field">Date:</label>
                <input type="text" 
                         id="witness-statement-date-field"
                         class="witness-statement-date-field"
                         name="day" size="10"/>
                (MM/DD/YYYY)
                &nbsp;
                &nbsp;
                Time:
                <input type="text" name="hour" size="6"/>                          
                (HH:MM am/pm)                
                
              </div>
              
              <strong>Witness Information</strong>
              
              <div class="form-row">
                <label for="witness-statement-name-field">Name:</label>
                <input type="text" name="name" size="50"
                       id="witness-statement-name-field"
                       class="witness-statement-name-field"
                       />
              </div>
                
              <div class="form-row">
                <label for="witness-statement-address-field">
                  Address:
                </label>
                <input type="text" 
                       class="witness-statement-address-field"
                       name="address" size="50"/>
              </div>
              
              <div class="form-row">
                <label for="witness-statement-city-state-zip-field">
                City, State, Zip: 
                </label>
                <input type="text" 
                       id="witness-statement-city-state-zip-field"
                       class="witness-statement-city-state-zip-field"
                       name="city_state_zip" size="50"/>                            
                  
              </div>
                
            </div>            
          </form>
          <div class="block-editable-html"></div>          
        
        </div>
      </div>
    </div>
    
  </div>
    
</div>

<script type="text/javascript">
    $(function() {    
      $('.witness-statement-date-field').datepicker({
      });
    });
</script>