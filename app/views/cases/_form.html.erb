<div class="form-case">
<%= form_for(@case) do |f| %>

  <%= render 'shared/form_errors', :errors => @case.errors %>    

  <div class="field">
    <%= f.label :title, 'Title :' %>
    <div class="boxfield">
      <%= f.text_field :title, :class => 'txtfield txtfield-wide' %>
    </div>
  </div>

  <div class="field" style="height: 200px;">
  
  <div class="summary">
      <%= f.label :summary, 'Summary :' %>
      <%= f.text_area :summary, :rows => 10 %>
  </div>
    
  </div>

  <div class="actions">
    <%= f.submit "Save", :class => :button %>
    <% if @case.id %>
      <%= link_to 'Cancel', @case %>
    <% end %>
  </div>

<% end %>
  
</div>

