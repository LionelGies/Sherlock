<%= form_for(@case) do |f| %>

  <% if @case.errors.any? %>
    <div id="error explanation">
      <h2><%= pluralize(@case.errors.count, "error") %> found, please correct below:</h2>
    </div>

    <ul>
      <% @case.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>

  <% end %>

  <div><%= f.label :title %>
  <%= f.text_field :title %></div>

  <div><%= f.label :summary %>
  <%= f.text_area :summary, :rows => 5 %></div>

  <div class="actions">
    <%= f.submit "Save" %>
  </div>

<% end %>
  
<script type="text/javascript">
  $(function() {
    $('textarea').tinymce({
      theme: 'advanced',
      theme_advanced_buttons1: 'bold,italic,underline,separator,formatselect,fontselect,fontsizeselect,separator,forecolor,backcolor,separator,strikethrough,justifyleft,justifycenter,justifyright,justifyfull,bullist,numlist',
      theme_advanced_buttons2: '',
      theme_advanced_buttons3: ''
    });
  });
</script>
