<div class="breadcrumb">  
  <%= link_to 'Dashboard', dashboard_path %> / My Employees
</div>

<h1>My Employees</h1>

<div class="employees-list">

<table class="table-bordered table-striped">
  <thead>
    <tr>
      <th style="width:17em;">Email</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Phone</th>
      <th class="center" style="width:13em;">Last Signed On</th>
    </tr>
  </thead>  
  <tbody>
    <% @employees.each do |employee| %>
      <tr class="<%= cycle("even", "odd") %>">
        <td>
          <%= link_to employee.email, employee_path(employee) %>
        </td>
        <td>
          <%= print_or employee.first_name %>
        </td>
        <td>
          <%= print_or employee.last_name %>
        </td>
        <td>
          <%= print_or employee.phone %>
        </td>        
        <td style="text-align:center;">
          <%= print_date_or employee.last_sign_in_at, 'never' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>