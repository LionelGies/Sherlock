
  <div class="form-center">
    <h1>Register for SherlockDocs</h1>
  </div>

<%= form_for(resource, 
  :as => resource_name, 
  :html => { :class => 'form-center form-labels-wider' },
  :url => registration_path(resource_name)) do |f| %>

  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, 'Email :' %>
    <div class="boxfield">
      <%= f.email_field :email, :class => :txtfield %>
    </div>
  </div>

  <div class="field">
    <%= f.label :password, 'Password :' %>
    <div class="boxfield">
      <%= f.password_field :password, :class => :txtfield %>
    </div>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, 'Confirm Password :' %>
    <div class="boxfield">
      <%= f.password_field :password_confirmation, :class => :txtfield %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Register", :class => :button %>
    <%= link_to 'Login', new_user_session_path %>
  </div>
<% end %>
  
  <script type="text/javascript">
    $(function() {
      SHERLOCK.focusOnField($('#<%= resource_name %>_email'));      
    });
  </script>
