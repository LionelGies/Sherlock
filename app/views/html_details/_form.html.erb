
<%= render 'shared/form_errors', :errors => @detail.errors %>    

<%= form_for [@case, @detail], :remote => remote do |f| %>

<div class="field" style="height:240px;">  
  <%= f.text_area :contents, :rows => 13, :class => :rich %>
</div>

<div class="actions no-margin">
  <%= f.submit 'Save', :class => :button %>  
  <%= link_to 'Cancel', @case, :class => 'link-cancel' %>  
</div>

<% end %>

<%= render 'shared/tinymce' %>
<script type="text/javascript">
  $(function() {    
    tinyMCE.execCommand('mceAddControl', false, 'html_detail_contents');
  });
</script>