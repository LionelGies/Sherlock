var block = $('#block-<%= @block.id %>');
<% if @blocks_count == 0 %>
var no_blocks_msg = $('<h3/>').addClass('no-blocks-msg')
                    .html("This case doesn't have any blocks yet");
$('.blocks-area').prepend(no_blocks_msg);
<% end %>
var prev = block.prev();
if (prev.hasClass('form-insert-block-wrapper')) {  
  prev.remove();
}
SHERLOCK.utils.hideAjaxLoading();
block.fadeOut("slow", function() { $(this).remove(); });
SHERLOCK.utils.flashMessage('notice', 'Block has been removed');