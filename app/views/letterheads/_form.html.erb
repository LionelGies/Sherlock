    <div class="heading">
      <div class="head-bg-left"></div>
      <div class="head-bg">Set Your Page Default</div>
      <div class="head-bg-right"></div>
    </div>
    
    <div class="box-cont">
      
      <div style="margin: 22px 32px 15px;">
      
      <div class="box-line">
        <%= f.radio_button(:all_pages, true) %>
        <%= f.label :all_pages_true, 'Set all pages to have this Header', 
                    :class => :inline %>
      </div>
      <div class="box-line">
        <%= f.radio_button(:all_pages, false) %>
        <%= f.label :all_pages_false, 'Set first page Only to have Header', 
                    :class => :inline %>    
      </div>
      
      <div class="box-line" style="margin:0.5em 0;">
        <%= f.check_box :link %>
        <%= f.label :link, 'Make Header a link?', :class => :inline %>    
      </div>
      
