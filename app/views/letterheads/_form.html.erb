                    <option>None</option>
                    <option>Option 1</option>
                    <option>Option 2</option>
                    <option>Option 3</option>
                  </select>
                </div>
              </div>

              <div class="linelast">
                <div class="lineleft3">
                  <div class="lineleft-txt">Upload an image</div>
                  <div class="lineleft-txt1">For best results upload a 900 x 630 JPG or PNG.</div>
                  <div class="lineleft-txt2">                    
                    <div class="textfield1" style="float:left;">
                      <input class="txtfield" name="" type="text" />
                    </div>
                    <div class="btn" style="float:right;">
                      <a href="#" class="button">Browse</a>
                    </div>                   
                  </div>
                </div>
                <div class="rightbox2">
                  <%= image_tag 'letterhead_img.jpg' %>                  
                </div>
              </div>
            </div>
          </div>        
      
    </div>
