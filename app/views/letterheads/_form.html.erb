                <div class="styled-select3">
                  <select class="listtxt2" name="">
                    <option>10 px</option>

                    <option>12 px</option>
                    <option>14 px</option>
                    <option>16 px</option>
                  </select>
                </div>
                <div class="lineleft4"> Width </div>

                <div class="styled-select3">
                  <select class="listtxt2" name="">
                    <option>75 %</option>
                    <option>100 %</option>
                    <option>125 %</option>
                    <option>150 %</option>
                  </select>

                </div>
              </div>
              <div class="linelast">
                <div class="lineleft"> Color </div>
                <div class="lineright">
                  <input class='simple_color' value='#cc3333'/>
                </div>
              </div>

            </div>
        </div>
      
      <div class="set-one">
        <div class="leftbox">Header Text</div>
        <div class="rightbox">
          <div class="line">
            <textarea class="areatxt" name="" cols="" rows=""></textarea>
          </div>

          <div class="linelast">
            <div class="lineleft2">Align Text </div>
            <div class="styled-select2">
              <select class="listtxt2" name="">
                <option>Left</option>
                <option>Center</option>
                <option>Right</option>

              </select>
            </div>
          </div>
        </div>
      </div>
      
      <div class="set-two">
            <div class="leftbox">Logo</div>
            <div class="rightbox">

              <div class="line">
                <div class="lineleft2">Choose Graphics </div>
                <div class="styled-select1">
                  <select class="listtxt" name="">
                    <option>None</option>
                    <option>Option 1</option>
                    <option>Option 2</option>

                    <option>Option 3</option>
                  </select>
                </div>
              </div>
              <div class="line">
