<% if errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(errors.count, "error") %> found, please correct below:</h2>    
      <ul class="errors-list">
        <% errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>

<% end %>