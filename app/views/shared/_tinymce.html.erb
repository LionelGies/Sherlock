<%= javascript_include_tag(root_path + 'tiny_mce/tiny_mce.js') %>

<script type="text/javascript">
var tinyMCEParams = {
  
  mode: 'specific_textareas',
  editor_selector : "rich",
  
  init_instance_callback : SHERLOCK.utils.richEditorInitialized,  

  theme: 'advanced',
  //theme_advanced_statusbar_location : 'top',
  theme_advanced_toolbar_location : 'top',
  plugins : 'spellchecker,table,snippetDropdown',
  spellchecker_rpc_url : "<%= spellcheck_path %>",
  spellchecker_languages : 'English=en',
  content_css: '<%= url_for root_url %>stylesheets/tinymce.css',
  theme_advanced_buttons1: 'undo,redo,|,bold,italic,underline,strikethrough,separator,formatselect,fontselect,fontsizeselect,separator,forecolor,backcolor,separator,spellchecker,separator,justifyleft,justifycenter,justifyright,justifyfull,bullist,numlist,|,snippetDropdown',
  theme_advanced_buttons2: '',
  theme_advanced_buttons3: ''        
}
$(function() {
  if (window.tinyMCECustomInit) {
      tinyMCEParams.setup = function(ed) {
        ed.onInit.add(window.tinyMCECustomInit);
      };
  }          
  tinyMCE.init(tinyMCEParams);    
});
</script>